.row
  .col-xs-2
    = f.button 'Save', class: 'btn btn-primary btn-block'
  .col-xs-10
    .panel-detail.panel-detail-padded
      By
      = link_to @note.user.login, user_path(@note.user.login)
      - if @note.user.full_name?
        (#{@note.user.full_name})

    = f.text_field :name, class: "form-control-title"
    %hr
    = f.text_area :body, class: "form-control-body"
