%div{reviewer: true, "note-id" => @note.id}
  .row
    .col-xs-2

    .col-xs-10
      .panel-detail.panel-detail-padded
        By
        = link_to @note.user.login, user_path(@note.user.login)
        - if @note.user.full_name?
          (#{@note.user.full_name})
      %h3.panel-title= @note.name
      %hr
  .row
    .col-xs-2
      %div(ng-repeat="citation in getSortedCitations()" ng-mouseover="showCitation(citation)" ng-mouseout="hideCitation(citation)")
        %p {{citation.comment}}
    .col-xs-10
      #document= render 'page'
